/* pages/theaterList/theaterList.wxss */
.head {
  height: 400rpx;
  display: flex;
  flex-flow: column;
  justify-content: space-around;
}

.filter {
  filter: blur(24px);
  height: 300rpx;
  width: 100%;
  position: absolute;
  z-index: -10;
}

.cover {
  display: flex;
}

.jianjie {
  display: flex;
  flex-flow: column;
  justify-content: space-between;
  height: 258rpx;
  padding: 16rpx 0;
}



.playUrl {
  margin: 0 28rpx;
}

.mTitle {
  font-size: 30rpx;
  font-weight:bold;
  color: white;
}


.rater {
  display: flex;
}

.subject {
  font-size: 26rpx;
  color: white;
}

.rateN {
  font-size: 24rpx;
  color: #fec500;
}

.rateP {
  font-size: 20rpx;
  color: #DCDCDC;
}

.font {
  color: #DCDCDC;
  font-size: 24rpx;
  line-height: 32rpx;
}
.scroll-H {
  white-space: nowrap;
}

.scroll-H-item {
  display: inline-block;
  font-size: 26rpx;
  padding: 20rpx 20rpx 28rpx;
  color: #676767;
}
.active{
  color:#EF4238;
  border-bottom: 4rpx #EF4238 solid;
}

.body {
  padding-left: 20rpx;
  border-top: 1rpx #DCDCDC solid;
  width: 100%;
  height: 800rpx
}

.theater {
  border-bottom: 1rpx #dcdcdc solid;
  padding: 34rpx 0;
}

.shop {
  display: flex;
  align-items: center;
}

.theName {
  font-size: 30rpx;
}

.lower {
  color: #ef4238;
}

.lowerN {
  font-size: 26rpx;
  margin-left: 20rpx;
}

.lowerL {
  font-size: 22rpx;
}

.adress {
  font-size: 24rpx;
  margin-top: 14rpx;
  color: #797979;
}

.tips {
  display: flex;
  font-size: 22rpx;
  margin-top: 18rpx;
}

.tipC {
  padding: 4rpx;
  margin-right: 6rpx;
}

.blue {
  border: 1rpx #589daf solid;
  border-radius: 8rpx;
}

.orang {
  border: 1rpx #f90 solid;
  border-radius: 8rpx;
}

.letter {
  width: 28rpx;
  height: 28rpx;
  font-size: 22rpx;
  text-align: center;
  line-height: 28rpx;
  border-radius: 4rpx;
  color: #fff;
  margin-right: 10rpx;
}

.des {
  display: flex;
  font-size: 22rpx;
  color: #a0a0a0;
  margin-top: 10rpx;
  align-items: center;
}

.huiL {
  background-color: #f90;
}

.kaL {
  background-color: #a97be0;
}

.times {
  display: flex;
  font-size: 24rpx;
  color: #797979;
  margin-top: 18rpx;
}
